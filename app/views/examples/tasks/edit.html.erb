<% if params[:attribute] %>
  <%= render "examples/tasks/inline_attribute_form", task: @task %>
<% else %>
  <%= form_for @task do |f| %>
    <div class="flex gap-4">
      <i class="fa-solid fa-table-columns fa-xl pt-3 h-fit"></i>
      <div>
        <%= f.text_field :name, class: "text-2xl rounded-md" %>
        <div>In list <%= link_to "##{@task.status}", "#x" %></div>
      </div>
    </div>
  <% end %>
<% end %>
