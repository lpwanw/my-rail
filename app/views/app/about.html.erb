<%= turbo_frame_tag "about_frame" do %>
  <%= render App::Window.new id: "about" do |component| %>
    <% component.with_body do %>
      <div class="relative grow w-full flex p-2 overflow-y-auto" data-controller="app--about">
        <div class="absolute top-2 right-6 border md:hidden" data-app--about-target="tabButton" data-action="click->app--about#toggleTabMenu">
          <div class="relative h-8 w-8 flex flex-col items-center origin-center rounded-2xl">
            <div data-app--about-target="stick" class="absolute top-1/4 w-7 h-0.5 bg-slate-900 origin-center data-[active=true]:rotate-45 data-[active=true]:top-1/2 transition-all ease-in-out">
            </div>
            <div data-app--about-target="stick" class="absolute top-3/4 w-7 h-0.5 bg-slate-900 origin-center data-[active=true]:-rotate-45 data-[active=true]:top-1/2 transition-all ease-in-out">
            </div>
          </div>
        </div>

        <div data-app--about-target="tabMenu" data-active="false" class="py-2 rounded absolute md:static w-60 flex flex-col gap-1 bg-slate-200 -translate-x-[120%] md:translate-x-0 data-[active=true]:translate-x-0 data-[active=true]:scale-100 border md:border-0 border-l-0 data-[active=true]:border-slate-500  md:scale-100 transition-all">
          <div class="w-full rounded flex p-2 hover:bg-gray-300 transition-all cursor-pointer" data-action="click->app--about#profile">
            <div class="h-16 w-16 aspect-square flex justify-center items-center rounded-full bg-neutral-300">
              <i class="fa-regular fa-user fa-2xl text-3xl"></i>
            </div>
            <div class="flex flex-col justify-center grow pl-4">
              <h1 class="text-xl bold">Phuong Tay</h1>
              <span class="text-xs">Ruby on Rails Engineer</span>
            </div>
          </div>
          <div>
            Search
          </div>

          <div data-role="system" data-app--about-target="tabItem" data-active="true" class="group relative data-[active=true]:bg-gray-300 w-full rounded flex items-center px-4 py-2 hover:bg-gray-300 transition-all cursor-pointer" data-action="click->app--about#system">
            <div class="w-6 flex justify-center items-center">
              <i class="fa-solid fa-computer w-4"></i>
            </div>
            <div class="flex flex-col justify-center grow pl-4">
              System
            </div>

            <div class="w-1 h-1/2 bg-blue-500 absolute left-0 rounded-md invisible group-data-[active=true]:visible transition-all"></div>
          </div>

          <div data-role="profile" class="group relative data-[active=true]:bg-gray-300 w-full rounded flex items-center px-4 py-2 hover:bg-gray-300 transition-all cursor-pointer" data-app--about-target="tabItem" data-action="click->app--about#profile">
            <div class="w-6 flex justify-center items-center">
              <i class="fa-regular fa-user w-4"></i>
            </div>
            <div class="flex flex-col justify-center grow pl-4">
              Profile
            </div>
            <div class="w-1 h-1/2 bg-blue-500 absolute left-0 rounded-md invisible group-data-[active=true]:visible transition-all"></div>
          </div>
        </div>

        <div class="grow mx-0 lg:mx-8 px-2 lg:max-w-screen-lg ">
          <div data-role="system" class="" data-app--about-target="contentItem">
            <h1 class="text-3xl bold">System</h1>
            <div class="w-full flex items-center mt-2 flex-col sm:flex-row">
              <div class="flex items-center">
                <%= image_tag "light.jpg", class: "h-20 aspect-square border-4 border-black rounded" %>

                <div class="px-4">
                  <h1 class="bold">Le Phuong Tay</h1>
                  <span>Fullstack</span>
                </div>
              </div>

              <div class="grow flex justify-end flex-col sm:flex-row">
                <div class="flex items-center p-2 rounded hover:bg-gray-300">
                  <i class="fa-solid fa-gem text-2xl mr-2"></i>
                  <div>
                    <h1 class="bold whitespace-nowrap">Ruby on Rails</h1>
                    <span class="text-sm font-light">Fullstack</span>
                  </div>
                </div>

                <div class="flex items-center p-2 rounded hover:bg-gray-300">
                  <i class="fa-regular fa-circle-check text-2xl mr-2 text-green-500"></i>
                  <div>
                    <h1 class="bold">Available for work</h1>
                    <span class="text-sm font-light">Lasted: 2023-11-01</span>
                  </div>
                </div>
              </div>
            </div>

            <div class="mt-4 flex flex-col gap-2">
              <%= render App::About::System::Item.new(
                icon_class: "fa-solid fa-gem",
                title: "Ruby on Rails",
                description: "Loving rails 7, It is the one person framework.",
                start_count: 3
              ) %>

              <%= render App::About::System::Item.new(
                icon_class: "fa-brands fa-docker ",
                title: "Docker",
                description: "Handle the tedious setup, so I can focus on the code.",
                start_count: 3
              ) %>

              <%= render App::About::System::Item.new(
                icon_class: nil,
                icon_image: "icons/tailwind_logo.svg",
                title: "Tailwind",
                description: "It’s easy to customize, adapts to any design, and the build size is tiny.",
                start_count: 3
              ) %>

              <%= render App::About::System::Item.new(
                icon_class: nil,
                icon_image: "icons/tailwind_logo.svg",
                title: "Tailwind",
                description: "It’s easy to customize, adapts to any design, and the build size is tiny.",
                start_count: 3
              ) %>

              <%= render App::About::System::Item.new(
                icon_class: nil,
                icon_image: "icons/tailwind_logo.svg",
                title: "Tailwind",
                description: "It’s easy to customize, adapts to any design, and the build size is tiny.",
                start_count: 3
              ) %>

              <%= render App::About::System::Item.new(
                icon_class: nil,
                icon_image: "icons/tailwind_logo.svg",
                title: "Tailwind",
                description: "It’s easy to customize, adapts to any design, and the build size is tiny.",
                start_count: 3
              ) %>
            </div>
          </div>
          <div data-role="profile" class="hidden" data-app--about-target="contentItem">
            Profile
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
<% end %>
